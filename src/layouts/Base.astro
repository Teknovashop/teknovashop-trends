---
const {
  title = 'Teknovashop Inteligentes',
  description = 'Plataforma de nicho para productos inteligentes: tendencias diarias, comparador informativo y guías claras.',
} = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="es_ES" />
    <link rel="icon" href="/brand/teknovashop-tendencias.png" />
    <link rel="stylesheet" href="/styles.css" />
    <style>
      :root{
        /* Tema claro suave */
        --bg:#f7fbfe;
        --panel:#ffffff;
        --ink:#0e1c22;
        --ink-soft:#5a7078;
        --muted:#e7eef3;
        --brand:#00b9bd;
        --brand-2:#008e91;
        --wrap-max:1100px;
      }
      *{ box-sizing:border-box; }
      html,body{ margin:0; padding:0; }
      body{
        background: var(--bg);
        color: var(--ink);
        font-family: system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, 'Helvetica Neue', Arial, 'Noto Sans';
        line-height:1.5;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }

      header.top{
        position: sticky; top:0; z-index:50;
        backdrop-filter: saturate(120%) blur(8px);
        background: rgba(255,255,255,.85);
        border-bottom: 1px solid var(--muted);
      }
      .top-inner{
        max-width: var(--wrap-max);
        margin: 0 auto; padding: .8rem 1rem;
        display:flex; align-items:center; justify-content:space-between; gap:1rem;
      }
      .brand{
        display:flex; align-items:center; gap:.7rem;
        text-decoration:none; color:var(--ink);
      }
      .brand img{ width:34px; height:34px; border-radius:9px; display:block; }
      .brand span{ font-weight:800; letter-spacing:.2px; }
      .brand span b{ color: var(--brand); font-weight:900; }

      nav a{
        color:var(--ink); text-decoration:none; margin-left:.5rem; font-weight:700;
        padding:.45rem .7rem; border-radius:10px;
      }
      nav a:hover{ background: var(--muted); }
      nav a.active{ background: var(--brand); color:#003133; }

      .wrap{
        max-width: var(--wrap-max);
        margin: 1.1rem auto 2rem;
        padding: 0 1rem;
      }

      /* Botones base */
      .btn{ display:inline-flex; align-items:center; justify-content:center; gap:.45rem;
        padding:.65rem .95rem; border-radius:12px; font-weight:900; text-decoration:none;
        border:1px solid #cfe3ea;
      }
      .btn-primary{ background: var(--brand); color:#003133; border-color: transparent; }
      .btn-primary:hover{ filter:brightness(.95); }
      .btn-ghost{ background:#eef6f9; color:#0b2a2d; }
      .btn-ghost:hover{ background:#e4f1f4; }

      footer.foot{
        border-top: 1px solid var(--muted);
        padding: 1rem 0 1.2rem;
        color: var(--ink-soft);
        background: #f3f8fb;
      }
      .foot-inner{ max-width: var(--wrap-max); margin: 0 auto; padding: 0 1rem; }
      .foot a{ color: var(--brand); text-decoration: none; font-weight:800; }
      .foot a:hover{ color: var(--brand-2); }
      .social{ display:flex; gap:.7rem; flex-wrap:wrap; margin:.6rem 0 0; }
      .social a{ display:inline-flex; align-items:center; gap:.45rem; background:#eaf3f7; padding:.4rem .6rem; border-radius:10px; border:1px solid #dbe9ee; color:#0c2a2d; text-decoration:none; font-weight:800; }
      .social a:hover{ background:#e2eef3; }

      h1,h2,h3{ line-height:1.25; margin:0 0 .5rem; }
      a{ color: var(--brand); }
      a:hover{ color: var(--brand-2); }

      @media (max-width: 560px){
        nav a{ margin-left:.25rem; }
        .brand span{ font-size:.98rem; }
      }
    </style>
  </head>

  <body>
    <header class="top">
      <div class="top-inner">
        <a href="/" class="brand">
          <img src="/brand/teknovashop-tendencias.png" alt="Teknovashop" onerror="this.style.display='none'" />
          <span>Teknovashop <b>Inteligentes</b></span>
        </a>
        <nav>
          <a href="/hoy">Hoy</a>
          <a href="/archivo">Archivo</a>
          <a href="/comparador">Comparador</a>
          <a href="/noticias">Noticias</a>
          <a href="/acerca">Acerca</a>
        </nav>
      </div>
    </header>

    <main class="wrap">
      <slot />
    </main>

    <footer class="foot">
      <div class="foot-inner">
        <small>
          © {new Date().getFullYear()} Teknovashop · Algunos enlaces pueden ser de afiliado ·
          <a href="/legal"> Avisos legales</a>
        </small>

        <!-- Redes -->
        <div class="social">
          <a href="https://www.instagram.com/tu_usuario" target="_blank" rel="noopener">Instagram</a>
          <a href="https://www.tiktok.com/@tu_usuario" target="_blank" rel="noopener">TikTok</a>
          <a href="https://www.youtube.com/@tu_usuario" target="_blank" rel="noopener">YouTube</a>
          <a href="mailto:hola@teknovashop.com">Contacto</a>
        </div>
      </div>
    </footer>

    <script is:raw>
      // Marcar nav activo
      const navLinks = document.querySelectorAll('header nav a');
      navLinks.forEach(a => {
        try{
          const u = new URL(a.href);
          if (location.pathname === u.pathname) a.classList.add('active');
        }catch{}
      });
    </script>
  </body>
</html>
