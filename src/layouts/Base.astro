---
const {
  title = 'Teknovashop Inteligentes',
  description = 'Plataforma de nicho para productos inteligentes: tendencias diarias, comparador informativo y guías claras.',
} = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="es_ES" />
    <link rel="icon" href="/brand/teknovashop-tendencias.png" />
    <link rel="stylesheet" href="/styles.css" />

    <style>
      :root{
        /* Design tokens */
        --bg: #f6fafc;
        --panel: #ffffff;
        --ink: #0c1a21;
        --ink-soft:#5a6b74;
        --muted:#e8eef2;

        --brand:#06b6d4;    /* cyan-500 */
        --brand-600:#0891b2; /* cyan-600 */
        --brand-700:#0e7490; /* cyan-700 */

        --ring: 0 0 0 3px rgba(6,182,212,.20);

        --radius-lg: 16px;
        --radius-md: 12px;

        --container: 1100px;
        --shadow-sm: 0 1px 2px rgba(12,26,33,.05);
        --shadow-md: 0 6px 18px rgba(12,26,33,.08);
        --shadow-lg: 0 24px 50px rgba(12,26,33,.10);
      }

      *{box-sizing:border-box}
      html,body{margin:0;padding:0}
      body{
        font-family: ui-sans-serif, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans";
        line-height:1.55;
        color:var(--ink);
        background:
          radial-gradient(1200px 600px at 0% -10%, #e9fbff 0%, transparent 60%),
          radial-gradient(1200px 600px at 100% -10%, #e7f7ff 0%, transparent 60%),
          var(--bg);
        -webkit-font-smoothing:antialiased;
        -moz-osx-font-smoothing:grayscale;
      }

      /* Header */
      header.top{
        position:sticky; top:0; z-index:40;
        backdrop-filter:saturate(120%) blur(8px);
        background: rgba(255,255,255,.86);
        border-bottom: 1px solid var(--muted);
      }
      .top-inner{
        max-width: var(--container);
        margin: 0 auto; padding: .75rem 1rem;
        display:flex; align-items:center; justify-content:space-between; gap:1rem;
      }
      .brand{
        display:flex; align-items:center; gap:.7rem; text-decoration:none; color:var(--ink);
      }
      .brand img{ width:34px; height:34px; border-radius:9px; display:block; box-shadow:var(--shadow-sm); }
      .brand span{ font-weight:800; letter-spacing:.2px; font-size:1.04rem }
      .brand span b{ color: var(--brand); font-weight:900; }

      nav{ display:flex; align-items:center; gap:.25rem; }
      nav a{
        color:var(--ink);
        text-decoration:none;
        font-weight:700;
        padding:.5rem .7rem;
        border-radius:10px;
      }
      nav a:hover{ background: #eef6f9 }
      nav a.active{ background: var(--brand); color:#003a46 }

      /* Main container */
      .wrap{
        max-width: var(--container);
        margin: 1.2rem auto 2.2rem;
        padding: 0 1rem;
      }

      /* Footer */
      footer.foot{
        margin-top:2rem;
        border-top:1px solid var(--muted);
        background: linear-gradient(0deg, #f0f6f9, #f7fbfe);
      }
      .foot-inner{
        max-width: var(--container);
        margin: 0 auto;
        padding: 1rem 1rem 1.4rem;
        color:var(--ink-soft);
      }
      .foot a{ color: var(--brand-600); text-decoration:none; font-weight:800 }
      .foot a:hover{ color: var(--brand-700) }
      .social{ display:flex; gap:.6rem; flex-wrap:wrap; margin:.7rem 0 0 }
      .chip{
        display:inline-flex; align-items:center; gap:.5rem;
        background:#eaf4f7; color:#0b2a2d;
        padding:.45rem .7rem; border-radius:999px; border:1px solid #dce9ee;
        font-weight:800; text-decoration:none;
      }
      .chip:hover{ background:#e2eef3; }

      /* Buttons */
      .btn{
        display:inline-flex; align-items:center; justify-content:center; gap:.5rem;
        padding:.72rem 1.05rem; border-radius:12px; font-weight:900; text-decoration:none;
        border:1px solid #cfe3ea; transition:transform .04s;
      }
      .btn:active{ transform: translateY(1px); }
      .btn-primary{ background: var(--brand); color:#00333e; border-color:transparent; box-shadow: var(--shadow-sm); }
      .btn-primary:hover{ filter:brightness(.97) }
      .btn-ghost{ background:#eef6f9; color:#0b2a2d; }
      .btn-ghost:hover{ background:#e4f1f4 }
      .btn-outline{ background:#fff; color:var(--brand-700); border-color:#9bd8e6 }
      .btn-outline:hover{ background:#f3fdff }

      /* Typography */
      h1,h2,h3{ line-height:1.2; margin:.1rem 0 .6rem }
      h1{ font-size: clamp(1.8rem, 3.2vw, 2.35rem) }
      h2{ font-size: clamp(1.35rem, 2.2vw, 1.6rem) }
      small, .muted{ color:var(--ink-soft) }
      a{ color: var(--brand-600); text-decoration:none }
      a:hover{ color: var(--brand-700) }

      /* Utilities */
      .lead{ font-size:1.05rem; color:#274149; }
      .hero{
        display:grid;
        grid-template-columns: 1.15fr .95fr;
        gap:2rem;
        align-items:start;
        margin: .4rem 0 1.2rem;
      }
      .hero-card{
        background: var(--panel); border:1px solid var(--muted);
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow-md);
        padding: 1rem 1.1rem;
      }
      .kicker{
        display:inline-flex; align-items:center; gap:.5rem;
        background:#ebfbff; color:#075985; border:1px solid #b3e9f4;
        padding:.25rem .55rem; border-radius:999px; font-weight:800; font-size:.85rem
      }

      @media (max-width: 920px){
        .hero{ grid-template-columns: 1fr; gap:1rem }
      }
      @media (max-width:560px){
        nav a{ padding:.45rem .55rem }
        .brand span{ font-size:.98rem }
      }
    </style>
  </head>

  <body>
    <header class="top">
      <div class="top-inner">
        <a href="/" class="brand">
          <img src="/brand/teknovashop-tendencias.png" alt="Teknovashop" onerror="this.style.display='none'" />
          <span>Teknovashop <b>Inteligentes</b></span>
        </a>
        <nav>
          <a href="/hoy">Hoy</a>
          <a href="/archivo">Archivo</a>
          <a href="/comparador">Comparador</a>
          <a href="/noticias">Noticias</a>
          <a href="/acerca">Acerca</a>
        </nav>
      </div>
    </header>

    <main class="wrap">
      <slot />
    </main>

    <footer class="foot">
      <div class="foot-inner">
        <small>
          © {new Date().getFullYear()} Teknovashop · Algunos enlaces pueden ser de afiliado ·
          <a href="/legal"> Avisos legales</a>
        </small>
        <div class="social">
          <a class="chip" href="https://www.instagram.com/tu_usuario" target="_blank" rel="noopener">Instagram</a>
          <a class="chip" href="https://www.tiktok.com/@tu_usuario" target="_blank" rel="noopener">TikTok</a>
          <a class="chip" href="https://www.youtube.com/@tu_usuario" target="_blank" rel="noopener">YouTube</a>
          <a class="chip" href="mailto:hola@teknovashop.com">Contacto</a>
        </div>
      </div>
    </footer>

    <script is:raw>
      // Marcar nav activo
      const navLinks = document.querySelectorAll('header nav a');
      navLinks.forEach(a => {
        try{
          const u = new URL(a.href);
          if (location.pathname === u.pathname) a.classList.add('active');
        }catch{}
      });
    </script>
  </body>
</html>
