---
const {
  title = 'Teknovashop Inteligentes',
  description = 'Tecnología útil para el día a día. Tendencias curadas en español, comparador informativo y guías claras para comprar con criterio.',
} = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="es_ES" />
    <link rel="icon" href="/brand/teknovashop-tendencias.png" />
    <!-- Tipografías premium, rápidas y legibles -->
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&family=Montserrat:wght@700;800&display=swap" rel="stylesheet">

    <!-- Tu hoja base si la tienes -->
    <link rel="stylesheet" href="/styles.css" />

    <style>
      /* ========= THEME PREMIUM ========= */
      :root{
        /* Paleta clara premium con acento tech (verde esmeralda) */
        --bg: #f5f7fb;          /* fondo general */
        --panel:#ffffff;        /* tarjetas / panel */
        --ink:#0e1216;          /* texto principal */
        --ink-soft:#5a6a75;     /* texto secundario */
        --muted:#e6edf3;        /* bordes/sutiles */
        --accent:#11b39c;       /* acento (contraste) */
        --accent-2:#0b8e7b;     /* hover/activo */
        --wrap-max:1200px;      /* ancho de contenido */
        --shadow: 0 8px 24px rgba(20,26,33,.06), 0 2px 10px rgba(20,26,33,.05);
        --radius-lg:16px;
        --radius-md:12px;
        --radius-sm:10px;
      }

      *{ box-sizing:border-box; }
      html,body{ margin:0; padding:0; }
      body{
        background: var(--bg);
        color: var(--ink);
        font-family: Inter, system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, 'Helvetica Neue', Arial, 'Noto Sans';
        line-height:1.55;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }
      h1,h2,h3,h4{ font-family: Montserrat, Inter, sans-serif; letter-spacing:-.2px; }

      /* ========= HEADER ========= */
      header.top{
        position: sticky; top:0; z-index:50;
        backdrop-filter: saturate(120%) blur(10px);
        background: rgba(255,255,255,.86);
        border-bottom: 1px solid var(--muted);
      }
      .top-inner{
        max-width: var(--wrap-max);
        margin: 0 auto; padding: .8rem 1rem;
        display:flex; align-items:center; justify-content:space-between; gap:1rem;
      }
      .brand{
        display:flex; align-items:center; gap:.7rem;
        text-decoration:none; color:var(--ink);
      }
      .brand img{ width:36px; height:36px; border-radius:10px; display:block; }
      .brand span{ font-weight:800; letter-spacing:.2px; }
      .brand span b{ color: var(--accent); font-weight:900; }

      nav a{
        color:var(--ink); text-decoration:none; margin-left:.5rem; font-weight:700;
        padding:.45rem .7rem; border-radius:10px;
      }
      nav a:hover{ background: var(--muted); }
      nav a.active{ background: var(--accent); color:#003c33; }

      /* ========= LAYOUT ========= */
      .wrap{ max-width: var(--wrap-max); margin: 1.1rem auto 2rem; padding: 0 1rem; }
      main.wrap{ margin-top: 1.1rem; }

      /* ========= BOTONES ========= */
      .btn{
        display:inline-flex; align-items:center; justify-content:center; gap:.5rem;
        padding:.7rem 1rem; border-radius: var(--radius-md); font-weight:800; text-decoration:none;
        border:1px solid #d2e4e9; transition: .15s ease-in-out; cursor:pointer;
      }
      .btn-primary{ background: var(--accent); color:#003d34; border-color: transparent; }
      .btn-primary:hover{ background: var(--accent-2); }
      .btn-ghost{ background:#eef6f4; color:#0b2a2d; }
      .btn-ghost:hover{ background:#e3f1ef; }

      /* ========= TARJETAS Y UTILIDADES ========= */
      .card{
        background: var(--panel); border:1px solid var(--muted); border-radius: var(--radius-lg);
        box-shadow: var(--shadow); overflow:hidden;
      }
      .card img{ width:100%; height:auto; display:block; }
      .card .body{ padding: .9rem 1rem; }

      .hero-card{
        background: var(--panel); border:1px solid var(--muted); border-radius: var(--radius-lg);
        box-shadow: var(--shadow);
      }

      .badge{
        display:inline-flex; align-items:center; gap:.4rem;
        padding:.25rem .55rem; font-weight:800; font-size:.75rem;
        border-radius:999px; background:#eaf6f4; color:#0d6a5f; border:1px solid #d5ede8;
      }
      .tag{
        display:inline-flex; align-items:center; gap:.35rem;
        padding:.25rem .55rem; font-weight:800; font-size:.75rem; border-radius:999px;
        background:#eef4fb; color:#0b3860; border:1px solid #dbe7f7;
      }
      .muted{ color: var(--ink-soft); }
      .section-title{ margin:0 0 .35rem; font-size: clamp(1.4rem, 2.1vw, 1.8rem); }
      .section-lead{ margin:0 0 .9rem; color:var(--ink-soft); }

      .grid{ display:grid; gap: 18px; }
      .cols-2{ grid-template-columns: repeat(2, minmax(0, 1fr)); }
      .cols-3{ grid-template-columns: repeat(3, minmax(0, 1fr)); }
      .cols-4{ grid-template-columns: repeat(4, minmax(0, 1fr)); }
      @media (max-width: 980px){ .cols-4{ grid-template-columns: repeat(2, 1fr);} }
      @media (max-width: 760px){ .cols-3{ grid-template-columns: 1fr;} .cols-2{ grid-template-columns: 1fr;} }

      /* Tira de confianza */
      .trust{
        display:flex; gap:.8rem; flex-wrap:wrap; margin-top:.8rem;
      }
      .trust .item{ display:inline-flex; align-items:center; gap:.45rem; color:var(--ink-soft); font-weight:700; }
      .trust .dot{ width:8px; height:8px; background:var(--accent); border-radius:50%; display:inline-block; }

      /* Footer */
      footer.foot{
        border-top: 1px solid var(--muted); padding: 1.2rem 0 1.4rem; color: var(--ink-soft);
        background: #f1f6fa;
      }
      .foot-inner{ max-width: var(--wrap-max); margin: 0 auto; padding: 0 1rem; }
      .foot a{ color: var(--accent); text-decoration: none; font-weight:800; }
      .foot a:hover{ color: var(--accent-2); }
      .social{ display:flex; gap:.7rem; flex-wrap:wrap; margin:.7rem 0 0; }
      .social a{
        display:inline-flex; align-items:center; gap:.45rem; background:#eaf3f7; padding:.45rem .65rem;
        border-radius:10px; border:1px solid #dbe9ee; color:#0c2a2d; text-decoration:none; font-weight:800;
      }
      .social a:hover{ background:#e2eef3; }

      a{ color: var(--accent); }
      a:hover{ color: var(--accent-2); }

      @media (max-width: 560px){
        nav a{ margin-left:.25rem; }
        .brand span{ font-size:.98rem; }
      }
    </style>
  </head>

  <body>
    <header class="top">
      <div class="top-inner">
        <a href="/" class="brand">
          <img src="/brand/teknovashop-tendencias.png" alt="Teknovashop" onerror="this.style.display='none'" />
          <span>Teknovashop <b>Inteligentes</b></span>
        </a>
        <nav>
          <a href="/hoy">Hoy</a>
          <a href="/archivo">Archivo</a>
          <a href="/comparador">Comparador</a>
          <a href="/noticias">Noticias</a>
          <a href="/acerca">Acerca</a>
        </nav>
      </div>
    </header>

    <main class="wrap">
      <slot />
    </main>

    <footer class="foot">
      <div class="foot-inner">
        <small>
          © {new Date().getFullYear()} Teknovashop · Algunos enlaces pueden ser de afiliado ·
          <a href="/legal"> Avisos legales</a>
        </small>

        <div class="social">
          <a href="https://www.instagram.com/tu_usuario" target="_blank" rel="noopener">Instagram</a>
          <a href="https://www.tiktok.com/@tu_usuario" target="_blank" rel="noopener">TikTok</a>
          <a href="https://www.youtube.com/@tu_usuario" target="_blank" rel="noopener">YouTube</a>
          <a href="mailto:hola@teknovashop.com">Contacto</a>
        </div>
      </div>
    </footer>

    <script is:raw>
      // Marcar nav activo
      const navLinks = document.querySelectorAll('header nav a');
      navLinks.forEach(a => {
        try{
          const u = new URL(a.href);
          if (location.pathname === u.pathname) a.classList.add('active');
        }catch{}
      });
    </script>
  </body>
</html>
